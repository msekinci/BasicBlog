@model List<CategoryWithBlogCount>
<div class="card my-4">
    <h5 class="card-header">Categories</h5>

    @foreach (var category in Model)
    {
        <div class="list-group">
            <a asp-route-category="@category.CategoryId"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center
               @(ViewBag.ActiveCategory?.ToString()==category.CategoryId.ToString()?" active" : "")">
                @category.CategoryName<span class="badge badge-primary badge-pill">@category.BlogsCount</span>
            </a>
        </div>
    }
</div>