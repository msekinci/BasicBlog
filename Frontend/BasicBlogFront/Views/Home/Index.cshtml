@model List<BlogListModel>

<h1 class="my-4">Latest Blogs</h1>

@if (ViewBag.ActiveCategory != null)
{
    <div class="border border-dark p-3 mb-2">
        @ViewBag.ActiveCategory blogs are listed filtered.  <a class="float-right" asp-action="Index">Remove Filter</a>
    </div>
}
@foreach (var blog in Model)
{
    <div class="card mb-4">
        <getblogimage id="@blog.Id" blog-image-type="BlogHome"></getblogimage>
        <div class="card-body">
            <h2 class="card-title">@blog.Title</h2>
            <p class="card-text">@blog.ShortDescription</p>
            <a asp-action="BlogDetail" asp-route-id="@blog.Id" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            Posted on @blog.PostedTime.ToLongDateString()
        </div>
    </div>}
