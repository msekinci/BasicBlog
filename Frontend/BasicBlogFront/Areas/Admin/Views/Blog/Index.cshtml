@model List<BlogListModel>

<div class="pt-3">
    <a class="btn btn-success" asp-action="Create">Add New One</a>
</div>
<hr />

<table id="blogDataTable" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Short Description
            </th>
            <th>
                Posted Time
            </th>
            <th>
                Assign Category
            </th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedTime)
            </td>
            <td>
                <a asp-action="AssignCategory" asp-route-id="@item.Id">Assign Category</a>
            </td>
            <td>
                <a class='btn btn-outline-primary' asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class='btn btn-outline-danger' asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section js{
    <script>
        $(document).ready(function () {
            $("#blogDataTable").dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                },
                "searching": true,
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10,
                "responsive": true,
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false
                }]
            });
        });
    </script>
}